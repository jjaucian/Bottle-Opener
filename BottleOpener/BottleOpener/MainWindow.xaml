<Window x:Class="BottleOpener.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BottleOpener"
        mc:Ignorable="d"
        Title="Bottle Opener V0.1" Height="375" Width="915" >
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <StackPanel Orientation="Vertical">
                <local:BottleConfigurationPanel VerticalAlignment="Top" Margin="5"/>
                <local:LogMessagePanel Margin="5"/>                
            </StackPanel>
            <local:BottleChartPanel Margin="5" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
